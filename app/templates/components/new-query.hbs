{{#if addNewQuery}}
  <h1>Ask Your Question Here</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author" size="40"}}
      </div>
      <div class="form-group">
        <label for="question">Question</label>
        {{input value=question id="content" size="40"}}
      </div>
      <div class="form-group">
        <label for="description">Description</label>
        {{input value=description id="rating" size="40"}}
      </div>
      <button {{action 'saveQuery'}}>Save</button>
    </form>
  </div>
  {{else}}
  <button{{action 'giveQuery'}}>New Question</button>
{{/if}}
