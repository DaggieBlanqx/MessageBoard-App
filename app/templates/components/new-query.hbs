{{#if addNewQuery}}
  <h1>New Review</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="content">Question</label>
        {{input value=question id="content"}}
      </div>
      <div class="form-group">
        <label for="rating">Description</label>
        {{input value=description id="rating"}}
      </div>
      <button {{action 'saveQuery'}}>Save</button>
    </form>
  </div>
  {{else}}
  <button{{action 'giveQuery'}}>New Question</button>
{{/if}}
